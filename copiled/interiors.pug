extends layout.pug


block content
  .hero.hero--inner(style="background-image: url(img/heroes/interiors.jpg)")
    .hero__container
      .grid.grid--container
        form.hero-form
          .hero-form__control
            select.custom-select
              option Квартира
              option Квартира
              option Квартира
          .hero-form__control
            select.custom-select
              option Студия
              option Студия
              option Студия
          .hero-form__control
            input(type="text" placeholder="Срок сдачи" data-input).datepicker
          .hero-form__control
            input(type="number" placeholder="от")
          .hero-form__control
            input(type="number" placeholder="до")
          .hero-form__control
            input(type="number" placeholder="Площадь")
          .hero__link
            a(href="").megalink.megalink--white
              .megalink__icon
                img(src="./img/megalink.png", alt="")
              .megalink__text Поиск по карте
          input(type="submit" value="Найти").btn
        .hero__icons
          .hero__icons-left
            a(href="").icon
              .icon__symbol
                img(src="./img/icons/params.png", alt="")
              .icon__text Квартира<br>по параметрам
            a(href="").icon
              .icon__symbol
                img(src="./img/icons/type.png", alt="")
              .icon__text Квартира<br>по типу
            a(href="").icon
              .icon__symbol.icon__symbol--fix
                img(src="./img/icons/house.png", alt="")
              .icon__text Ипотека
            a(href="#calculator").icon.calculator-open
              .icon__symbol
                img(src="./img/icons/calc.png", alt="")
              .icon__text Ипотечный<br>калькулятор
          .hero__icons-right
            a(href="").icon
              .icon__symbol
                img(src="./img/icons/address.png", alt="")
              .icon__text Отделы продаж
          .hero__icons-absolute
            a(href="").icon
              .icon__symbol
                img(src="./img/icons/camera.png", alt="")
              .icon__text Следить за ходом<br>строительства


  .breadcrumbs
    .grid.grid--container
      .breadcrumbs__container
        a(href="").breadcrumbs__link Главная
        .breadcrumbs__link.breadcrumbs__link--active Готовые интерьеры


  section.section.section--gray.scrollme
    .grid.grid--container.scrollme
      h2.h2 Готовые проекты
      p.subheader Мы поможем воплотить дизайн-проект в жизнь и получить идеальный интерьер как с картинки!
      .tabs
        .tabs__header-container
          .tabs__header
            .tabs__link.tabs__link--active Студия
            .tabs__link 1-комнатные
            .tabs__link 2-комнатные
            .tabs__link 3-комнатные
            .tabs__link 4-комнатные

        .tabs__content.tabs__content--active
          .row
            - for (var i = 1; i < 10; i++)
              .col.col--md-4
                .card
                  .card__img(style="background-image: url(./img/design/1.jpg)")
                    .card__img-container
                      .like
                  .card__container
                    .card__table
                      .card__row
                        span Количество комнат
                        span 3
                      .card__row
                        span Квадратные метры
                        span 68
                    a(href="").megalink
                      .megalink__icon
                        img(src="./img/megalink.png", alt="")
                      .megalink__text подробнее

          .text-center
            .btn
              .btn__icon
                img(src="./img/load.png", alt="")
              span Загрузить еще

        - for (var z = 1; z < 5; z++)
          .tabs__content
            .row
              - for (var i = 1; i < z * 2; i++)
                .col.col--md-4
                  .card
                    .card__img(style="background-image: url(./img/design/1.jpg)")
                      .card__img-container
                        .like
                    .card__container
                      .card__table
                        .card__row
                          span Количество комнат
                          span 3
                        .card__row
                          span Квадратные метры
                          span 68
                      a(href="").megalink
                        .megalink__icon
                          img(src="./img/megalink.png", alt="")
                        .megalink__text подробнее