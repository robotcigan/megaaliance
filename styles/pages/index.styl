.section
  padding $main-padding
  &--formats
    background-color $light-gray
  &--banks
    background-color $light-gray
  &--news
    background-color $baby-blue
  &--mortage
    background-color #eaeaea
  &--mortage-star
    background-color #eee
    padding 4rem 0
  &--short-news
    padding 4rem 0

  &--blue
    background-color #e5eff3
  &--gray
    background-color #f3f6f9
  &__container
    position relative
  &--padding-fix
    padding-bottom 0
    padding-top 8rem
  &__close
    align-items center
    background-color $primary
    border-radius 50%
    color #fff
    circle(47px)
    cursor pointer
    display flex
    font-size 3.2rem
    justify-content center
    padding-right 1px
    padding-bottom 1px
    position absolute
    right 0
    top 0
    &:before
      color $main
      content 'Закрыть'
      font-size 1.6rem
      font-weight 500
      left -8rem
      position absolute


.object-card
  background-repeat no-repeat
  background-position top center
  background-size cover
  width 100%
  &__container
    padding 3.5rem 3rem
    padding-top 30rem
    position relative
  &__title
    color #fff
    font-size 3.6rem
    font-weight 800
    margin-bottom 1rem
  &__info
    display flex
  &__address,
  &__time
    margin-bottom 1rem
    margin-right 2rem
    span
      color #fff
      font-weight 600
      display inline-block
      vertical-align middle
    img
      display inline-block
      margin-right 1rem
      vertical-align middle
  &__price
    color #fff
    font-size 3rem
    font-weight 600
    margin-bottom 3rem
  .megalink
    color #fff
  &__logo
    bottom (90 / 500 * 100)%
    position absolute
    right (60 / 1000 * 100)%

.formats
  display flex
  flex-wrap wrap
  position relative
  .item
    height 32rem
    transition all .3s ease
    width 50%
    &__container
      align-items center
      background-position center
      background-repeat no-repeat
      background-size cover
      display flex
      justify-content center
      height 100%
      transition all .4s ease
      width 100%
    &__text
      color #fff
      font-size 2.4rem
      font-weight 600
      text-align center
    .block
      background-color #fff
      height 100%
      opacity 0
      padding-left (60 / 770 * 100)%
      padding-top (60 / 770 * 100)%
      padding-right (100 / 770 * 100)%
      transform translateY(-100%)
      transition opacity .4s ease
      &__title
        font-size 3rem
        font-weight 300
        margin-bottom 2.5rem
      &__anons
        margin-bottom 3rem
    &:hover
      .item
        &__container
          opacity 0
          transform scale(.95)
      .block
        opacity 1
  &:hover
    .circle
      circle(20rem)
      transform scale(.6)
      &__icon
        margin-bottom 0
        margin-top 1rem
      &__text
        opacity 0
        translateY(2rem)
      &:after
        display none
        


.circle
  align-items center
  background-color $primary
  border-radius 50%
  center()
  circle(26rem)
  display flex
  flex-direction column
  justify-content center
  position absolute
  transition all .3s ease
  &:after
    background url('../../img/formats-circle.png')
    background-size cover
    border-radius 50%
    content ''
    circle(31rem)
    center()
    left -10%
  &__icon
    margin-bottom 2rem
    margin-top -2.5rem
    transition all .3s ease
  &__text
    color #fff
    font-size 2.4rem
    font-weight 500
    transition all .3s ease




.offers-slider
  .slide
    position relative
    &__box
      background-color $primary
      bottom 0
      color #fff
      display flex
      margin auto
      max-height 27rem
      padding 5rem
      // padding-right 15rem
      padding-right (170 / $container-width * 100)%
      position absolute
      top 0
      right 0
      z-index 10
    &__icon
      margin-right 5rem
    &__title
      font-size 3rem
      font-weight 600
      line-height 1.2
      max-width 34rem
      margin-bottom 3rem
    &__phone
      font-size 3rem
      font-weight 300
      margin-bottom 2rem
    &__date
      opacity .7

.white-block
  overflow hidden
  padding 6rem 0
  position relative
  width 100%
  &__left
    padding-left (70 / 363 * 100)%
    width 100%
  &__title
    font-size 4.8rem
    font-weight 300
    margin-bottom .8rem
  &__subtitle
    color $dark-gray
    font-weight 300
  &__right
    position relative
    padding-left (100 / 1150 * 100)%
    width 100%
    &:after
      palka()
  &__second-header
    margin-bottom 1.5rem
  &__text
    color $secondary - 20%
    line-height 1.45
    max-width 60rem
  &__img
    bottom -18rem
    left (800 / 1150 * 100)%
    position absolute
    transition transform .3s ease
  &:hover
    .white-block
      &__img
        transform translateY(-1.5rem)

.calc
  font-size 2.4rem
  font-weight 300
  padding-left .4rem
  padding-top 2.5rem
  position relative
  &:after
    background-color $primary
    content ''
    height 4px
    left .4rem
    position absolute
    top .4rem
    width 44px
  span
    display inline-block
    margin-bottom .5rem
  &__result
    color $primary
    display inline-block
    font-weight 500


.mortage-star
  font-size 1.4rem
  font-weight 300
  line-height 1.6
  padding-left 2.5rem
  position relative
  &:after
    content '*'
    color $primary
    font-size 2.4rem
    font-weight 500
    left 0
    position absolute
    top -1rem
    

@media(max-width 1540px)
  .object-card
    &__logo
      bottom initial
      left 3.5rem
      top 6%
      right initial

@media(max-width 1400px)
  .index-slider .slide__right
    padding 7rem 4rem
  .tabs__buttons
    .item:not(:last-child)
      margin-right 1rem


@media(max-width 1200px)
  .object-card
    margin-bottom 3rem
    &__container
      padding 2rem
      padding-top 15rem
    &__logo
      left 2rem
      width 10rem
      img
        max-width 100%
    &__title
      font-size 2.8rem
    &__info
      display block
    &__price
      font-size 2.2rem
      margin-bottom 2rem
  .formats
    .item
      height 24rem
      width 100%
      .block
        display none
    .circle
      display none
  .white-block
    &__left
      padding-left 0
    &__right
      padding-left 0
      &:after
        display none
  .offers-slider
    .slide
      &__box
        height 23rem
        max-height initial
        padding 3%
      &__icon
        margin-right 2rem
      &__title
        font-size 2.4rem
  .news-slider
    &__item
      .news-slider
        &__hover
          opacity 1
          transform none
        &__img
          transform translateY(100%)
          &:after
            opacity 1
        &__date
          color #fff
        &__title
          color #fff
      .megalink
        opacity 1
        transform none

@media(max-width 1000px)
  .section
    &__close
      top -1.2rem
      &:before
        display none

@media(max-width 767px)
  .white-block
    padding-bottom 12rem
    &__title
      font-size 4rem
      br
        display none
    &__img
      bottom -37rem
      left 0
      margin auto
      padding-bottom 10rem
      right 0
      text-align center
  .formats
    .item
      height 16rem

@media(max-width 500px)
  .offers-slider
    .slide__box
      bottom 2.3rem
      display block
      height initial
      margin initial
      top initial
      width 100%
    .slide__icon
      display none
    .slick-slide
      padding-bottom 17rem
      img
        max-width 200%
    .slide
      &__title
        font-size 2rem
        margin-bottom 1rem
      &__phone
        font-size 2rem

@media(max-width 370px)
  .section
    &__close
      circle(35px)
      font-size 2.4rem
      padding-right 0
      top -3.2rem

