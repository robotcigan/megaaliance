.parallax
  background-posititon center
  background-repeat no-repeat
  background-size cover
  display flex
  justify-content space-between
  height 54rem
  overflow hidden
  position relative
  width 100%
  &__hero
    transform translate(4rem, (100 / $container-width * 100)%)
    align-self flex-start
    img
      display block
    &--special
      transform translate(-6rem, 4rem)
  &__container
    // position absolute
    // right (150 / $container-width * 100)%
    // top 10rem
    flex-shrink 0
    align-self center
    margin-right (150 / $container-width * 100)%
    width (700 / $container-width * 100)%
  &__title
    color #fff
    font-size 4.8rem
    font-weight 300
    margin-bottom 5rem
  &__text
    color #fff
    line-height 1.6
    margin-bottom 5rem
  
  & + .banks
    margin-top 4rem

.contact
  background-color #fff
  margin-bottom 3rem
  &__top
    min-height 16rem
    padding 3.5rem
  &__title
    font-size 1.8rem
    font-weight 500
    margin-bottom 3rem
  &__address
    span
      display block
      margin-bottom 1.5rem
  &__bottom
    background-color #fafbfd
    border-left 4px solid $primary
    padding 3.5rem 3.1rem
  &__row
    &:not(:last-child)
      margin-bottom 1rem
  &__label
    display inline-block
    min-width 7rem
    vertical-align middle
  &__info
    display inline-block
    vertical-align middle
    &--email
      color $primary


.text-block
  background-color #fff
  padding (100 / $container-width * 100)% (250 / $container-width * 100)%

.special-white-block
  background-color #fff
  padding 9rem
  

.preim
  display flex
  margin-bottom 3rem
  width 100%
  &__left
    align-items center
    background-color #d9e5ea
    display flex
    flex-shrink 0
    justify-content center
    width 25%
    text-align center
    img
      display inline-block
  &__right
    background-color #fff
    line-height 1.6
    padding 5rem
    width 75%


.vacancy
  box-shadow none
  cursor pointer
  margin-bottom 3rem
  position relative
  transition all .4s ease
  &__top
    background-color #fff
    display flex
    padding 5rem (80 / $container-width * 100)%
    padding-right (280 / $container-width * 100)%
  &__left
    display block
    flex-shrink 0
    width (420 / 1380 * 100)%
  &__title
    font-size 2.4rem
    font-weight 300
    margin-top 3rem
  &__label
    color #8795a3
    margin-bottom 1.5rem
  &__text
    line-height 1.3
  &__bottom
    display none
  &__bottom-container
    background-color #f5f5f5
    display flex
    padding 5rem (80 / $container-width * 100)%
    padding-right (280 / $container-width * 100)%
  &__table
    margin-bottom 4rem
  &__row
    display flex
    margin-bottom 2rem
  &__col
    min-width 22rem
    &--bold
      font-weight 500
  &__arrow
    position absolute
    right 3rem
    top 8rem
    transition transform .3s ease
    &--active
      transform rotate(180deg) translateY(2px)

  &:hover
    transform translateY(-4px)
    // filter: drop-shadow(0 16px 24px rgba(135, 149, 163, .45))
    box-shadow 0 8px 24px 8px rgba(135, 149, 163, .25)


.white-gray
  display flex
  &__white
    background-color #fff
    padding 4% (70 / $container-width * 100)%
  &__gray
    background-color #f0f0f0
    flex-shrink 0
    padding 4% (60 / $container-width * 100)%
  &__title
    font-size 1.8rem
    font-weight 500
    margin-bottom 4rem
  .file
    margin-bottom 4rem
  &__address,
  &__date
    display inline-block
    vertical-align middle
    img,
    strong
      display inline-block
      font-weight 500
      vertical-align middle
    img
      margin-right 1rem
  &__address
    margin-right 4rem

.photos
  margin 0 -1.5rem
  .slick
    &-prev
      left -6.5% !important
    &-next
      right -6.5% !important
  .photo
    padding 0 1.5rem
    &__img
      background-size cover
      background-posititon center
      height 38rem
    &__container
      background-color #fff
      padding 3rem
      position relative
      &:after
        background-color $primary
        content ''
        height 4rem
        position absolute
        right 0
        top 1.8rem
        width 4px

.reviews
  padding 0 (100 / $container-width * 100)%
  .slick
    &-prev
      left -6.5% !important
    &-next
      right -6.5% !important

.review
  background-color #fff
  // padding 4% (110 / $container-width * 100)%
  padding 4rem 2%
  text-align center
  &__name
    font-size 2rem
    font-weight 500
    margin-bottom 1.5rem
  &__text
    font-size 1.8rem
    line-height 1.6

.partners
  margin 0 -1.5rem
  .partner
    align-items center
    background-color #fff
    display flex
    justify-content center
    height 18rem
    margin 0 1.5rem
    img
      display inline-block
  .slick
    &-prev
      left -6.5% !important
    &-next
      right -6.5% !important

.blocks
  display flex
  flex-wrap wrap
  justify-content space-between
  .block
    align-items center
    background-color #f3f6f9
    display flex
    font-size 1.8rem
    font-weight 500
    line-height 1.2
    min-height 19rem
    padding 6.5rem 4.5rem
    width 47.3%
    &:nth-of-type(1)
      margin-bottom 2.5rem
    &:nth-of-type(2)
      margin-bottom 2.5rem
    &--red
      background-color $primary
      color #fff


@media(max-width 1800px)
  .reviews
    .slick
      &-prev
        left 0 !important
      &-next
        right 0 !important
  .photos,
  .partners
    .slick
      &-arrow
        display none !important


@media(max-width 1200px)
  .text-block
    padding 2rem
  .white-gray
    display block
  .reviews,
  .partners
    .slick
      &-arrow
        display none !important


@media(max-width 500px)
  .preim
    display block
    &__left
      padding 4rem
      width 100%
    &__right
      padding 2rem
      width 100%



