.choice
  background-color #fff
  padding (110 / $container-width * 100)%
  &__wrap
    display flex
    justify-content space-between
  &__left
    margin-right (20 / $container-width * 100)%
    width 10%
  &__control
    margin-bottom 2rem
  &-control
    display inline-block
    text-align center
    &__label
      display block
      font-size 1.8rem
      font-weight 600
      margin-bottom 2rem
      position relative
      &:after
        palka()
        background-color #ededed
        bottom -1.5rem
        left 0
        margin auto
        top initial
        right 0
    &__input
      display block
      border none
      font-family $font
      font-size 4.8rem
      font-weight 600
      text-align center
      width 8rem
    &__arrow
      color $primary
      cursor pointer
      font-size 3.4rem
      font-weight 600
  &__right
    display flex
    width 90%
  &__img
    margin-right (70 / $container-width * 100)%
    img
      max-width 100%
  &__plans
    margin-right (90 / $container-width * 100)%
  &__btn
    margin-bottom 7rem
  &__title
    font-size 3rem
    font-weight 600
    margin-bottom 3.5rem
  &__table
    margin-bottom 4rem
  &__row
    display flex
    justify-content space-between
    padding 1rem
    &:not(:last-child)
      border-bottom 1px solid #eee
  &__price
    font-size 1.8rem
    font-weight 600
    margin-bottom .8rem
  &__price-number
    color $primary
    font-size 2.4rem
    font-weight 600
    margin-bottom 4rem
  &__buttons
    margin-bottom 6rem
  &__compass
    align-items center
    display flex
    padding-left 10%
    padding-top 2rem
    img
      display inline-block
      margin-right 5rem
      vertical-align middle
    span
      display inline-block
      vertical-align middle

.plans
  &__header
    margin-top 1.5rem
  &__img
    margin-bottom 7rem
  &__label
    display inline-block
    font-size 1.8rem
    font-weight 600
    margin-bottom 3.5rem
    margin-right .3rem
  &__numbers
    display inline-block
    font-size 2.4rem
    font-weight 500
    span
      color $primary
  &__plan-container
    display flex
    text-align center
  .plan
    opacity .4
    justify-content center
    &__img
      text-align center
    img
      display inline-block
      max-height 5rem
      margin-bottom 1.5rem
    &--active
      opacity 1
    &:not(:last-child)
      margin-right 3rem


.comfort
  background-color #fff
  display flex
  &__left
    padding (80 / $container-width * 100)%
  &__title
    font-size 2.4rem
    font-weight 500
    margin-bottom 4rem
  &__img
    background-size cover
    flex-shrink 0
    height 100%
    width 48rem
  &__info
    align-items center
    display flex
  &__address
    margin-right 1rem
  &__address,
  &__date
    align-items center
    display flex
    img
      display block
      margin-right 1rem
    strong
      font-weight 500


.why
  align-items center
  display flex
  height 70rem
  justify-content center
  overflow hidden
  position relative
  &__images
    height 100%
    left 0
    position absolute
    top 0
    width 100%
    .image
      background-position center
      background-repeat no-repeat
      background-size cover
      height 100%
      left 0
      opacity 0
      position absolute
      top 0
      transform scale(1.05)
      transition all 1s ease
      width 100%
      &--active
        opacity 1
        transform none
  &__container
    color #fff
    position relative
    text-align center
    z-index 30
  &__title
    display inline-block
    font-size 6rem
    font-weight 300
    margin-bottom 9rem
    position relative
    &:after
      bottom -4.2rem
      left 0
      margin auto
      palka()
      top initial
      right 0
  &__text
    font-size 1.8rem
    line-height 1.45
    max-width 76rem
  &__align
    background-color rgba(#fff, .04)
    bottom 0
    position absolute
    width 100%
    z-index 20
  &__icons
    bottom 0
    display flex
    width 100%
    .icon
      align-items center
      display flex
      justify-content center
      padding 3rem 5rem
      width 100%
      &__img
        margin-right 2rem
        img
          display block
      &__text
        color #fff
        font-size 1.8rem
        font-weight 500
      &:hover
        background-color $primary


.video
  background-size cover
  background-position center
  height 64rem
  &__buttons
    align-items flex-end
    display flex
    justify-content center
    height 100%
    padding-bottom 11rem
  .mega-btn
    span
      color #fff
    &:not(:last-child)
      margin-right 9rem !important


@media(max-width 1200px)
  .choice
    padding 4% 3%
    &__wrap
      display block
    &__left
      display flex
      justify-content space-between
      margin-bottom 1rem
      margin-right 0
      width 100%
    &-control
      align-items center
      display flex
      margin-right 2rem
      &__label
        margin-bottom 0
        margin-right 2rem
        order 1
        &:after
          display none
      &__input
        order 3
      &__arrow
        &--bottom
          order 2
        &--top
          order 4
    &__right
      flex-wrap wrap
      justify-content space-between
      width 100%
    &__info
      margin-top 4rem
      width 100%
    &__img
      margin-right 0
    &__compass
      padding-left 0
      img
        margin-right 1rem
    &__btn
      margin-bottom 2rem
  .comfort
    flex-direction column-reverse
    &__img
      height 50vh
      width 100%
    &__info
      display block
    &__address
      margin-bottom 2rem
  .why
    height 40rem
    min-height initial
    &__icons
      display none


@media(max-width 767px)
  .choice
    &__left
      display block
    &-control
      margin-right 0
      &__label
        text-align left
        min-width 100px
  .plans
    &__another
      margin-bottom 3rem
  .why
    display block
    min-height 30rem
    padding-top 4rem
    &__align
      position relative
    &__title
      font-size 4rem
      margin-bottom 6rem
      &:after
        bottom -2.5rem
    &__text
      font-size 1.4rem
      margin-bottom 4rem
    &__icons
      flex-wrap wrap
      .icon
        padding 0
        width initial
        &__img
          margin-right 1rem
          transform scale(.8)
        &__text
          font-size 1.4rem
  .video
    max-height 80vh
    position relative
    .mega-btn
      &:not(:last-child)
        margin-right 0 !important
    &__buttons.mega-btns
      bottom 0
      display block
      left 5%
      height 150px
      padding-bottom 2rem
      position absolute
      width calc(100% - 5%)
      .mega-btn
        margin-bottom 1rem


