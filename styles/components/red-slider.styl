.red-slider
  .slide
    background-size cover
    background-position left
    display flex
    overflow hidden
    max-height 48rem
    position relative
    &__left
      background-position center
      background-size cover
      width 100%
    &__square
      align-items center
      background-color $primary
      bottom 0
      color #fff
      display flex
      font-size 2rem
      font-weight 500
      height 23rem
      justify-content center
      position absolute
      left (125 / $container-width * 100)%
      line-height 1.2
      margin auto
      padding 4rem
      top 0
      width 24rem
    &__right
      background-color $primary
      color #fff
      flex-shrink 0
      height 100%
      padding 7rem
      width 48rem
    &__title
      font-size 2.4rem
      font-weight 600
      margin-bottom 2.8rem
      margin-top 4rem
      position relative
      &:after
        palka()
        background-color #fff
        top -3.5rem
    .megalink
      &:hover
        .megalink
          &__text
            color #fff
  &--with-offset
    margin-bottom 3.5rem
    



@media(max-width 1200px)
  .red-slider
    .slide
      &__right
        padding 3rem
        width 40%
      &__square
        display none

@media(max-width 767px)
  .red-slider
    .slide
      flex-direction column
      max-height initial
      &__left
        height 40vh
      &__right
        width 100%





