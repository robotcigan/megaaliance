.slick
  &-prev,
  &-next
    top 50%
    &:before
      font-size 2.4rem
      color #fff
      transition color .2s
  &-prev
    left -3rem
    &:before
      content '\f104'
      font-family 'FontAwesome'
  &-next
    right -3rem
    &:before
      content '\f105'
      font-family 'FontAwesome'
  &-dots
    bottom -5rem
  &-dots li button:before
    color #fff
    font-size 3.5rem
    opacity 1
  &-dots li.slick-active button:before
    color $primary
    opacity 1
