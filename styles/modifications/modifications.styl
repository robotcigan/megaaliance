.slick
  &-prev,
  &-next
    top 50%
    &:before
      font-size 2.4rem
      color #fff
      transition color .2s
  &-prev
    left -3rem
    &:before
      content '\f104'
      font-family 'FontAwesome'
  &-next
    right -3rem
    &:before
      content '\f105'
      font-family 'FontAwesome'
  &-dots
    bottom -5rem
    li
      margin 0
  &-dots li button:before
    color #dddddc
    font-size 3.5rem
    opacity 1
  &-dots li.slick-active button:before
    color $primary
    opacity 1

.slider
  opacity 0
  transition opacity .5s ease

.slick-initialized
  opacity 1


.noUi
  &-horizontal
    border none
    height 6px
    .noUi-handle
      circle(1.8rem)
  &-handle
    background $primary
    box-shadow none
    border 2px solid #fff
    border-radius 50%
  &-connect
    background $primary
    box-shadow none
  &-marker-horizontal.noUi-marker,
  &-marker-horizontal.noUi-marker-large
    display none
  &-pips
    color $main
    font-family $font
    font-weight 300


