.btn
  background $primary
  border 0
  border-radius $radius
  color #fff
  cursor pointer
  display inline-block
  font-family $font
  font-size 1.6rem
  font-weight 600
  flex-shrink 0
  line-height 1
  letter-spacing .4px
  max-height 6rem
  padding 2.2rem 3.5rem
  text-decoration none
  text-transform uppercase
  transition all .4s
  &__icon
    line-height 1 !important
    margin-bottom 0 !important
    .fa
      font-weight 600
      line-height 1
      margin 0
  span + &__icon
    margin-left 2rem
  &__icon + span
    margin-left 2rem
  &:hover
    background-color $primary - 15%
  &--solid
    background-color transparent
    color $primary
    border 2px solid $primary
    &:hover
      border-color $primary - 15%
      color #fff
  &--full-size
    padding 2.2rem 3rem
    text-align center
    width 100%
  &--white
    background-color transparent
    border 1px solid #fff
    color #fff
    margin-bottom 2rem
  &--small
    padding 1.6rem 3.6rem

.flatpickr
  &-month
    margin-bottom 1rem
  &-calendar
    padding 1.5rem 0
    &.arrowTop,
    &.arrowBottom
      &:before,
      &:after
        display none !important

