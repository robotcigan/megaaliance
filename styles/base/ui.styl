.form-control
  min-height 5rem
  margin-bottom 1.6 rem
  position relative
  &__icon
    color $gray
    font-size 3.2rem
    position absolute
    right 2rem
    top 3rem
    .fa
      transition all .2s
  label
    color $main
    cursor text
    display inline-block
    line-height 1
    font-weight 300
    margin-bottom .8rem
    transition all .2s
    max-width 100%
  input[type="text"],
  input[type="password"],
  input[type="date"],
  input[type="email"],
  input[type="tel"],
  input[type="number"],
  select,
  textarea,
  .select2-selection--single
    background #fff
    border 2px solid $light-gray
    border-radius 0
    display block
    font-size 1.6rem
    line-height 1
    min-height 4rem
    transition border-color .2s
    padding 1.3rem 1.6rem
    position relative
    resize vertical
    width 100%
    -webkit-appearance none
    &:focus
      border-color $primary
      & + .form-control__icon
        transform rotate(180deg)
  textarea
    height 100%
    min-height 22rem
  .select2-container--open + .form-control__icon
      transform rotate(180deg)
  &--error
    input[type="text"],
    input[type="password"],
    input[type="date"],
    input[type="email"],
    input[type="tel"],
    input[type="number"],
    select,
    textarea,
    .select2-selection--single
      border-color $error
    label
      color $error
    .form-control__icon
      color $error

.custom-select
  &--type-2
    font-size 3.8rem !important
    padding 1rem 3rem !important
    padding-right 6rem !important
    & + .form-control__icon
      top .5rem

.checkbox
  cursor pointer
  display block
  margin-bottom 1rem
  user-select none
  &__label
    background transparent
    border-radius $radius
    border 2px solid $light-gray
    cursor pointer
    circle(2.4rem)
    display inline-block
    margin-right 1rem
    position relative
    vertical-align middle
    z-index 1
    &:after
      color $primary
      content "\f00c"
      display none
      font-family 'FontAwesome'
      font-size 1.5rem
      left 3px
      position absolute
      top 2px
      z-index 10
  input
    display none
  input:checked + .checkbox__label
    // border-color $primary
    &:after
      display block
  label
    color $main
    display inline-block
    cursor pointer
    vertical-align middle

.radio
  cursor pointer
  display block
  margin-bottom 1rem
  user-select none
  &__label
    background transparent
    border-radius 50%
    border 1px solid $light-gray - 10%
    cursor pointer
    circle(2.4rem)
    display inline-block
    margin-right 1rem
    position relative
    vertical-align middle
    z-index 1
    &:after
      background-color $primary
      border-radius 50%
      circle(1.4rem)
      color #fff
      content ''
      display none
      font-size 1.5rem
      left 4px
      position absolute
      top 4px
      z-index 10
  input
    display none
  input:checked + .radio__label
    background-color #fff
    border-color $primary
    box-shadow 0 0 0 1px $primary
    &:after
      display block
  label
    color $main
    display inline-block
    cursor pointer
    vertical-align middle

.file-upload
  display block
  margin-bottom .8rem
  margin-top .8rem
  input
    display none
    
.tabs
  &__header-container
    display flex
    justify-content center
    position relative
  &__header
    background-color #fff
    border-radius $radius
    border $border
    display flex
    margin-bottom 4rem
  &__link
    cursor pointer
    display block
    padding 1.2rem 3rem
    &:not(:last-child)
      border-right $border
    &--active
      background-color $primary
      border-radius $radius
      color #fff

  &__buttons
    align-item center
    display flex
    position absolute
    top .8rem
    right 0
    .item
      align-items center
      display flex
      &:not(:last-child)
        margin-right 5rem
      &__icon
        margin-right 1rem
        img
          display block
      &__text
        font-weight 500
      &--type-2
        .item
          &__text
            max-width 10rem
  
  &__content
    display none
    &--active
      display block

