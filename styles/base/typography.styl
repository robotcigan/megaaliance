h1
  margin 0

.h1,
.h2,
.h3,
.p,
p
  margin 0
  margin-bottom 1rem

p
  font-size 1.6rem
  line-height 1.6
  margin-bottom 3rem

.subheader
  font-size 1.8rem
  font-weight 300
  margin 0
  margin-bottom 5rem
  text-align center
  strong
    font-weight 500

.h1
  // font-family $font-header
  font-size 6rem
  font-weight 300
  line-height 1.1
  margin-bottom 3.5rem
  text-transform uppercase

.h2
  font-size 4.8rem
  // font-family $font-header
  font-weight 300
  line-height 1
  margin-bottom 3rem
  text-align center

.h3
  // font-family $font-header
  font-size 3.2rem
  font-weight 800
  line-height 1.2
  margin-bottom 2rem

.h4
  display inline-block
  font-size 2rem
  font-weight 500
  line-height (30 / 20)
  margin-bottom 1.5rem
  margin-top 0

.h5
  display inline-block
  font-size 1.6rem
  font-weight 500
  line-height 1.2
  letter-spacing .4px
  margin-bottom 2.4rem
  margin-top 0
  text-transform uppercase


.text-primary
  color $primary


.uppercase
  text-transform uppercase

@media(max-width 500px)
  .h3
    line-height 1

